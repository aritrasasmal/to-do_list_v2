<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
        <% for (let li of listItems){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name='checkbox' value="<%= li._id %>" onChange="this.form.submit()">
                <p><%= li.todo %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
        <% } %>
        <form action="/" method="post">
            <input type="text" name="listInput" placeholder="New Item" required autocomplete="off" autofocus>
            <button type="submit" name="button" value="<%= listTitle %>"> +</button>
        </form>
    </div>
    
    
</body>
</html>